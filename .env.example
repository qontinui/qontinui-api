# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/qontinui_db
# Backend database URL (for accessing qontinui-web backend database)
BACKEND_DATABASE_URL=postgresql://user:password@localhost:5432/qontinui_db

# Security
# IMPORTANT: Generate a secure random key for production
# Example: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# API Configuration
API_V1_STR=/api
PROJECT_NAME=Qontinui API

# CORS Origins (JSON array format)
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]

# Token expiration (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# Redis Configuration (shared with qontinui-web)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
